                            <div class="menu-item">
                            <a class="menu-link @Html.Raw(url.Contains("/admin/cupitem/index")?"active":"")" href="/admin/cupitem/index">
                                <span class="menu-icon">
                                    @Html.Raw(iconSvg)
                                </span>
                                <span class="menu-title">Cup Item</span>
                            </a>
                    </div>

                    <div class="menu-item">
                        <a class="menu-link @Html.Raw(url.Contains("/admin/machineitem/index")?"active":"")" href="/admin/machineitem/index">
                            <span class="menu-icon">
