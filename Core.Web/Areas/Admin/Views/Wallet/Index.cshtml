@model WalletViewModel
@using Core.Utilities.Constants
@{
    ViewBag.Title = "Wallet";
}
@section Scripts{
    <script src="~/lib/jquery-qrcode-master/src/jquery.qrcode.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-qrcode-master/src/qrcode.js" asp-append-version="true"></script>
    <script src="~/admin-app/controllers/wallet/index.js" asp-append-version="true"></script>
    <script>
        var walletObj = new WalletController();
        walletObj.initialize();
    </script>
}

@section Styles{
    <link href="~/admin-app/controllers/wallet/index.css" rel="stylesheet" asp-append-version="true" />
}

<input hidden id="be-hidden-2faCode" />
<input hidden id="be-hidden-password" />

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div class="container-xxl" id="kt_content_container">
            <div class="row gy-5 g-xl-8">
                <div class="col-xl-4">
                    <div class="card mb-5 mb-xl-8">
                        <div class="card-body rounded bg-light-primary">
                            <div class="card  rounded border-primary border border-dashed p-6">
                                <div class="d-flex flex-column py-2">
                                    <div class="d-flex align-items-center">
                                        <img src="~/images/MAR.png" alt="" class="me-4 h-60px" />
                                        <div>
                                            <div class="fs-5 fw-bolder">Wallet MAR</div>
                                            <div class="fs-5 fw-bold text-gray-800"><span class="numberFormat" id="MARBalance">0.00</span> MAR</div>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center mt-4">
                                        <button class="btn btn-sm btn-flex btn-light btn-active-primary fw-bolder me-3" disabled @*data-bs-toggle="modal" data-bs-target="#ic_modal_deposit_mar"*@>Deposit</button>
                                        <button class="btn btn-sm btn-flex btn-light btn-active-primary fw-bolder me-3" id="btnWithdrawMAR">Withdraw</button>
                                        <a href="/mar-transaction" class="btn btn-sm btn-icon btn-flex btn-light btn-active-primary fw-bolder">
                                            <span class="svg-icon svg-icon-3">
