@section Styles{

}

@section Scripts{
    <script src="~/client-app/controllers/exchange/index.js"></script>

    <script>
        var savingObj = new ExchangeController();
        savingObj.initialize();
    </script>
}

<input type="hidden" id="isExchange" />
<input type="hidden" id="tokenPrice" />
<input type="hidden" id="bnbPrice" />
<input type="hidden" id="transactionType" />

<div class="gamfi-breadcrumbs-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="breadcrumbs-area sec-heading">
                    <div class="sub-inner mb-15">
                        <a class="breadcrumbs-link" href="@Url.Action("Index","Exchange")">Sale</a>
                        <span class="sub-title">Seed Round</span>
                        <img class="heading-left-image" src="~/client-side/earntoken/assets/images/icons/steps.png" alt="Steps-Image" />
                    </div>
                    <h2 class="title mb-0">Seed Round</h2>
                </div>
            </div>
            <div class="col-lg-7 breadcrumbs-form md-mt-30">
                <div class="btn-area">
                    <a class="readon black-shape mr-5" href="@Url.Action("LeaderBoard","Exchange")">
                        <span class="btn-text">Leaderboard</span>
                        <span class="hover-shape1"></span>
                        <span class="hover-shape2"></span>
                        <span class="hover-shape3"></span>
                    </a>
                    <a class="readon black-shape" href="@Url.Action("Block","Exchange")">
                        <span class="btn-text">Block</span>
                        <span class="hover-shape1"></span>
                        <span class="hover-shape2"></span>
                        <span class="hover-shape3"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="project-details-conent gamfi-form-content">
    <div class="container">
        <div class="row pt-70">
            <div class="col-lg-12 pr-25 md-pr-15">
                @Html.AntiForgeryToken()
                <div class="project-item">
                    <div class="project-info">
                        <h4 class="mb-15">
                            <img src="~/images/tokenlogomni.png" style="width: 40px; background: white; border-radius: 50%; padding: 5px;" />
                            @(CommonConstants.PROJECT_NAME) - @(CommonConstants.TOKEN_IN_CODE)
                        </h4>
                        <h4 class="mb-15">Price <span class="buse text-warning">$<span class="tokenPrice">0.00</span></span></h4>
                    </div>
                    <div class="project-content border-bottom-2">
                        <div id="sevenDays" class="StakeTabcontent">
                            <div class="project-media mb-40">
                                <ul class="project-listing">
                                    <li>Total Sale: <strong>20,000,000.00 @(CommonConstants.TOKEN_IN_CODE)</strong></li>
                                    <li>Min: <strong class="numberFormat">0.1</strong> <strong>BNB</strong></li>
                                    <li>Max: <strong class="numberFormat">50</strong> <strong>BNB</strong></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="project-form-list">
                        <h5 class="mb-18">Balance: <span class="CurrentBalance">0.0000</span> BNB</h5>
                        <div class="balance-form-area mb-27">

                            <input type="text" class="numberFormat4" value="0.00" id="txtAmount">

                            <button class="max btnMax">MAX</button>

                            <div class="white-shape-small approve" id="btnConfirm">
                                <input type="button" value="Confirm" style="background: #ffeb3b; color: black;">
                            </div>
                        </div>
                    </div>

                    <div class="project-content">
                        <div id="sevenDays" class="StakeTabcontent">
                            <div class="project-media mb-40">
                                <ul class="project-listing">
                                    <li>Swap Value <span class="lblTotalUSD">$0.00</span></li>
                                    <li>Token Receive <span class="lblTotalToken">0.00 @(CommonConstants.TOKEN_IN_CODE)</span></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
