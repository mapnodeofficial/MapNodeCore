@section Styles{
    <link href="~/client-app/controllers/request-status/index.css" rel="stylesheet" />
}

@section Scripts{

    <script src="~/client-app/controllers/request-status/index.js"></script>
    <script>
        var requestStatusObj = new RequestStatusController();
        requestStatusObj.initialize();
    </script>
}

<!-- Breadcrumbs Section Start -->
<div class="gamfi-breadcrumbs-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="breadcrumbs-area sec-heading">
                    <div class="sub-inner mb-15">
                        <a class="breadcrumbs-link" href="/">Home</a>
                        <span class="sub-title">Request Status</span>
                        <img class="heading-left-image" src="~/client-side/earntoken/assets/images/icons/steps.png" alt="Steps-Image" />
                    </div>
                    <h2 class="title mb-0">Request Status</h2>
                </div>
            </div>
            <div class="col-lg-7 breadcrumbs-form md-mt-30">
                <div class="btn-area">
                    <a class="readon black-shape mr-5" href="@Url.Action("Index","Wallet")">
                        <span class="btn-text">Wallet</span>
                        <span class="hover-shape1"></span>
                        <span class="hover-shape2"></span>
                        <span class="hover-shape3"></span>
                    </a>
                    <a class="readon black-shape" href="@Url.Action("Index","Transaction")">
                        <span class="btn-text">Transaction</span>
                        <span class="hover-shape1"></span>
                        <span class="hover-shape2"></span>
                        <span class="hover-shape3"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs  Section End -->
<!-- Previous Section Start -->
<div class="gamfi-previous-section TokenomicsTable_Sect md-pb-50 mt-5 pt-5">
    <div class="container">
        <div class="TokenomicsTable">
            <div class="leaderboard-table-list pb-140 md-pb-80">
                <div class="">
                    <div class="table-responsive">
                        <table class="table table-row-dashed table-row-gray-300 align-middle">
                            <tr>
                                <th class="text-warning">Type</th>
                                <th class="text-warning">Amount</th>
                                <th class="text-warning">Fee<br />Fee Amount</th>
                                <th class="text-warning">Amount Receive</th>
                                <th class="text-warning">Address To</th>
                                <th class="text-warning">Status</th>
                                <th class="text-warning">Created Date<br />Updated Date</th>
                            </tr>
                            <tbody id="tbl-content"></tbody>
                        </table>
                    </div>
                    @await Component.InvokeAsync("AjaxPaging")
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Previous Section End -->
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{TypeName}}</td>
        <td>{{Amount}} {{UnitName}}</td>
        <td>{{Fee}}%<br />{{FeeAmount}} {{UnitName}}</td>
        <td>{{AmountReceive}} {{UnitName}}</td>
        <td>
            <a href="https://bscscan.com/address/{{AddressTo}}">{{AddressTo}}</a>
        </td>
        <td>{{{StatusName}}}</td>
        <td>{{DateCreated}}<br/>{{DateUpdated}}</td>
    </tr>
</script>
