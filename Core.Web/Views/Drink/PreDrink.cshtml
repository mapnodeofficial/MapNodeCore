@section Styles{
    <style>

        .gamfi_Our_mentor_section {
            padding-top: 115px;
        }
    </style>
}

<div class="gamfi-breadcrumbs-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="breadcrumbs-area sec-heading">
                    <div class="sub-inner mb-15">
                        <a class="breadcrumbs-link" href="/">F<span style="font-family:fantasy">&amp;</span>B To Earn</a>
                        <span class="sub-title">Access Code</span>
                        <img class="heading-left-image" src="/client-side/earntoken/assets/images/icons/steps.png" alt="Steps-Image">
                    </div><h2 class="title mb-0">Access Code</h2>
                </div>
            </div>
            <div class="col-lg-7 breadcrumbs-form md-mt-30">
                <div class="btn-area">
                    <a class="readon black-shape" href="#">
                        <span class="btn-text">Leaderboard</span>
                        <span class="hover-shape1"></span>
                        <span class="hover-shape2"></span>
                        <span class="hover-shape3"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="project-details-conent gamfi-form-content" 
     style="background: none;  margin-bottom: 100px;">
    <div class="container">
        <div class="row pt-70">
            <div class="col-lg-12 pr-25 md-pr-15">
                <div class="project-item">
                    <div class="project-info">
                        <h4 class="mb-15">
                            <img src="~/images/tokeniconfb.png" style="width: 40px; background: white; border-radius: 50%; padding: 5px;" />
                            Input your wallet address to start
                        </h4>
                        <h4 class="mb-15">@ViewBag.Msg</h4>
                    </div>
                    <form action="@Url.Action(null,null,null)" method="post">
                        @Html.AntiForgeryToken()
                        <div class="project-form-list">
                            <div class="balance-form-area mb-27" style="padding-bottom:5%">

                                <input type="text" class="" name="walletAddress" required>

                                <div class="white-shape-small approve" id="btnConfirm">
                                    <input type="submit" value="Access">
                                    <span class="hover-shape1"></span>
                                    <span class="hover-shape2"></span>
                                    <span class="hover-shape3"></span>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>


