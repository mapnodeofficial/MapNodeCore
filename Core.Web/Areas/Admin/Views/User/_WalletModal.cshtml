@using Core.Data.Enums
@using Core.Utilities.Extensions

<div class="modal fade" id="ic_modal_wallet">
    <div class="modal-dialog modal-dialog-centered mw-500px">
        <div class="modal-content rounded">
            <div class="modal-header pb-0 border-0 justify-content-end">
                <div class="btn btn-sm btn-icon btn-active-color-primary" data-bs-dismiss="modal">
                    <span class="svg-icon svg-icon-1">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                            <g transform="translate(12.000000, 12.000000) rotate(-45.000000) translate(-12.000000, -12.000000) translate(4.000000, 4.000000)" fill="#000000">
                                <rect fill="#000000" x="0" y="7" width="16" height="2" rx="1" />
                                <rect fill="#000000" opacity="0.5" transform="translate(8.000000, 8.000000) rotate(-270.000000) translate(-8.000000, -8.000000)" x="0" y="7" width="16" height="2" rx="1" />
                            </g>
                        </svg>
                    </span>
                </div>
            </div>
            <div class="modal-body scroll-y px-10 px-lg-15 pt-0 pb-10">
                <form class="form w-100">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="hidId" />
                    <div class="text-center mb-6">
                        <h2 class="mb-3">Update Wallet Balance</h2>
                    </div>
                    <div class="fv-row mb-4">
                        <label class="form-label fs-6 fw-bolder text-dark">Action Type</label>
                        <select id="ActionType" class="form-select form-select-lg form-select-solid">
                            <option selected value="1">Deposit</option>
                            <option value="2">Withdraw</option>
                        </select>
                    </div>
                    <div class="fv-row mb-4">
                        <label class="form-label fs-6 fw-bolder text-dark">Wallet Type</label>
                        
                        <select id="WalletType" class="form-select form-select-lg form-select-solid">
                            <option selected value="0">=== Select Wallet ==</option>
                                    <option value="@(WalletTransactionUnit.USDT)">@WalletTransactionUnit.USDT.GetDescription()</option>
                                    <option value="@(WalletTransactionUnit.BNB)">@WalletTransactionUnit.BNB.GetDescription()</option>
                                    <option value="@(WalletTransactionUnit.MNI)">@WalletTransactionUnit.MNI.GetDescription()</option>
                                    <option value="@(WalletTransactionUnit.MNO)">@WalletTransactionUnit.MNO.GetDescription()</option>
                                </select>
                    </div>
                    <div class="fv-row mb-4">
                        <div class="d-flex flex-stack mb-2">
                            <label class="form-label fs-6 fw-bolder text-dark">Wallet Balance</label>
                        </div>
                        <input class="form-control form-control-lg form-control-solid" type="text" value="0" id="WalletBalance" readonly autocomplete="off" />
                    </div>
                    <div class="fv-row mb-4">
                        <div class="d-flex flex-stack mb-2">
                            <label class="form-label fs-6 fw-bolder text-dark">Amount</label>
                        </div>
                        <input class="form-control form-control-lg form-control-solid numberFormat" value="0" type="text" id="Amount" autocomplete="off" />
                    </div>
                    <div class="text-center">
                        <button type="button" id="btnConfirmUpdateWallet" class="btn btn-lg btn-success mb-5">
                            <span class="indicator-label">Submit</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>