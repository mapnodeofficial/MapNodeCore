@section Scripts{
    <script src="~/client-app/controllers/account/reset-password.js" asp-append-version="true"></script>
    <script>
        var resetPassword = new ResetPasswordController();
        resetPassword.initialize();
    </script>
}


<!-- SignUp-SignIn_Sectioon -->
		<div class="SignUp_SignIn_Form_Sect">
            <div class="SignUp_SignIn_Form_SectBG"></div>
		    <div class="container">
		        <div class="SignUp_SignIn_Form_Content">
		            <div class="SignUp_SignIn_Form">
		                <h2>Reset password</h2>
		                <h3>Enter new password access your account</h3>
		                <form action="">

							<input type="hidden" value="@Model.Code" id="hdCode">

							@Html.AntiForgeryToken()
		                    <div class="EmailFild">
		                        <lable>Email Address</lable>
		                        <input type="email" placeholder="Enter your email address" readonly value="@Model.Email" id="txtEmail" name="email" autocomplete="off">
		                    </div>
		                    
		                    <div class="PasswordFild">
		                        <lable>Password</lable>
		                        <input type="password" placeholder="Enter your password"  id="txtPassword" autocomplete="off">
		                    </div>
							<div class="PasswordFild">
		                        <lable>Confirm password</lable>
		                        <input type="password" placeholder="Enter your password" id="txtConfirmPassword" autocomplete="off">
		                    </div>

                    

		                    <a href="javascript:void(0)" id="btnResetPassword">
		                        <div class="project-btn-area text-center black-shape-bigCustom">
		                            <button type="button">Submit</button>
		                            <span class="hover-shape1"></span>
		                            <span class="hover-shape2"></span>
		                            <span class="hover-shape3"></span>
		                        </div>
		                    </a>
		                </form>
		                <h4>Already have an account ? <a href="/login">Sign in now !</a></h4>
		            </div>
		            <div class="singUpformShadow"></div>
		        </div>
		    </div>
		</div>		
		<!-- SignUp-SignIn_Sectioon END -->