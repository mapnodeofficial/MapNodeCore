<div class="gamfi-explore-content gamfi-previous-section pt-70 md-pt-80 pb-100 md-pb-100">
    <div class="container">
        <div class="project-menu-area d-flex align-items-center justify-content-between">
            <div class="project-left-menu">
                <ul class="nav" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="tab-link active" data-bs-toggle="tab"
                                data-bs-target="#open-map" type="button" role="tab"
                                aria-controls="open-map" aria-selected="true">
                            Store Near
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="tab-link" data-bs-toggle="tab"
                                data-bs-target="#open-store" type="button" role="tab"
                                aria-controls="open-store" aria-selected="false">
                            Store List
                        </button>
                    </li>
                </ul>
            </div>
        </div>

        <div class="tab-content">
            <div class="tab-pane fade show active" id="open-map" role="tabpanel">
                <div class="row align-items-center">
                    <div class="col-lg-12 col-md-12">
                        <div id="map" style="width:100%;height:400px;"></div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="open-store" role="tabpanel">
                <div class="row align-items-center">
                    <div class="col-lg-12 col-md-12">
                        <div class="TokenomicsTable">
                            <div class="leaderboard-table-list md-pb-80">
                                <div class="">
                                    <div class="table-responsive">
                                        <table class="table table-row-dashed table-row-gray-300 align-middle">
                                            <tr class="text-glow">
                                                <th class="text-warning">Avatar</th>
                                                <th class="text-warning">Name</th>
                                                <th class="text-warning">Website</th>
                                                <th class="text-warning">Phone Number</th>
                                                <th class="text-warning">Increase</th>
                                                <th class="text-warning">Distance</th>
                                                <th class="text-warning">Address</th>
                                            </tr>
                                            <tbody id="tbl-content"></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="gamfi-explore-content gamfi-previous-section pb-200 md-pb-200">
