<!--Header Start-->
<header id="gamfi-header" class="gamfi-header-section transparent-header">
    <div class="menu-area menu-sticky">
        <div class="container">
            <div class="heaader-inner-area d-flex justify-content-between align-items-center">
                <div class="gamfi-logo-area d-flex justify-content-between align-items-center">
                    <div class="logo">
                        <a href="/">
                            <img src="~/images/tokenlogo.png" width="55" alt="logo" />
                        </a>
                    </div>
                    <div class="header-menu">
                        <ul class="nav-menu">
                            <li>
                                <a href="@Url.Action("Index","Home")">Home</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index","NFTMarketplace")">Market</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index","Exchange")">Sale</a>
                            </li>

                            <li>
                                <a href="#">Crypto Earn</a>
                                <ul class="sub-menu">
                                    <li><a href="@Url.Action("Index","Saving")">Savings</a></li>
                                    <li><a href="@Url.Action("Index","Drink")">MN To Earn</a></li>
                                    <li><a href="#">Staking</a></li>
                                    <li><a href="#">Liquidity Farming</a></li>
                                    <li><a href="#">Dual Investment</a></li>
                                    <li><a href="#">Auto-Invest</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="~/whitepaper/mapnode_whitepaper.pdf" target="_blank">Whitepaper</a>
                            </li>
                            <li>
                                <a href="#">F&Q</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="gamfi-btn-area">
                    <ul>
                        <li>
                            <a id="nav-expander" class="nav-expander bar" href="#">
                                <div class="bar">
                                    <span class="dot1"></span>
                                    <span class="dot2"></span>
                                    <span class="dot3"></span>
                                </div>
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="buy-token">
                                <a class="readon black-shape" href="#">
                                    <span class="btn-text">@User.GetSpecificClaim("UserName")</span>
                                    <i class="icon-arrow_down"></i>
                                </a>
                                <ul>
                                    @if (User.GetSpecificClaim("RoleName").ToLower() == "admin")
                                    {
                                        <li><a href="/dashboard"> Admin Manager</a></li>
                                    }

                                    <li><a href="@Url.Action("Profile","Account")"> Profile</a></li>
                                    <li><a href="@Url.Action("Index","Referral")"> Referral</a></li>
                                    <li><a href="@Url.Action("Index","Wallet")"> Wallet</a></li>
                                    <li><a href="@Url.Action("Index","Transfer")"> Transfer</a></li>
                                    <li><a href="@Url.Action("Index","Swap")"> Swap</a></li>
                                    <li><a href="@Url.Action("Index","Transaction")"> Transaction</a></li>
                                    <li><a href="@Url.Action("Index","RequestStatus")"> Request Status</a></li>
                                    <li><a href="@Url.Action("signout","account")"> Sign Out</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="buy-token">
                                <a class="readon black-shape btnBuyToken" href="/register">
                                    <span class="btn-text lbWalletAddress">Register</span>
                                </a>
                            </li>
                            <li>
                                <button onclick="location.href = '/login';" type="button" class="readon white-btn hover-shape" @*data-bs-toggle="modal" data-bs-target="#WalletConnect"*@>
                                    <span class="btn-text">Login </span>
                                </button>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <nav class="right_menu_togle mobile-navbar-menu" id="mobile-navbar-menu">
        <div class="close-btn">
            <a id="nav-close2" class="nav-close">
                <div class="line">
                    <span class="line1"></span>
                    <span class="line2"></span>
                </div>
            </a>
        </div>
        <div class="sidebar-logo mb-30">
            <a href="index.html"><img src="~/images/tokenlogo.png" width="70" alt=""></a>
        </div>
        <ul class="nav-menu">
            <li>
                <a href="@Url.Action("Index","Home")">Home</a>
            </li>
            <li>
                <a href="@Url.Action("Index","NFTMarketplace")">Market</a>
            </li>
            <li>
                <a href="@Url.Action("Index","Exchange")">Sale</a>
            </li>
            <li>
                <a href="#">Crypto Earn</a>
                <ul class="sub-menu">
                    <li><a href="@Url.Action("Index","Drink")">MN To Earn</a></li>
                    <li><a href="@Url.Action("Index","Saving")">Savings</a></li>
                    <li><a href="#">Staking</a></li>
                    <li><a href="#">Liquidity Farming</a></li>
                    <li><a href="#">Dual Investment</a></li>
                    <li><a href="#">Auto-Invest</a></li>
                </ul>
            </li>
            <li>
                <a href="~/whitepaper/mapnode_whitepaper.pdf" target="_blank">Whitepaper</a>
            </li>
            <li>
                <a href="#">F&Q</a>
            </li>

            @if (User.Identity.IsAuthenticated)
            {
                <li class="menu-item-has-children">
                    <a href="#">@User.GetSpecificClaim("UserName")</a>
                    <ul class="sub-menu">
                        @if (User.GetSpecificClaim("RoleName").ToLower() == "admin")
                        {
                            <li><a href="/dashboard"> Admin Manager</a></li>
                        }
                        <li><a href="@Url.Action("Profile","Account")"> Profile</a></li>
                        <li><a href="@Url.Action("Index","Referral")"> Referral</a></li>
                        <li><a href="@Url.Action("Index","Wallet")"> Wallet</a></li>
                        <li><a href="@Url.Action("Index","Transfer")"> Transfer</a></li>
                        <li><a href="@Url.Action("Index","Swap")"> Swap</a></li>
                        <li><a href="@Url.Action("Index","Transaction")"> Transaction</a></li>
                        <li><a href="@Url.Action("Index","RequestStatus")"> Request Status</a></li>
                        <li><a href="@Url.Action("signout","account")"> Sign Out</a></li>
                    </ul>
                </li>
            }
            else
            {
                <li class="buy-token">
                    <a class="readon black-shape btnBuyToken" href="/register"
                       style="padding: 7px 8px 7px; color: #ffffff;
                             border: 2px solid #393941; top: 4px;
                             font-size: 16px; font-weight: 400; width: 90px;
                             text-align: center; float: left;">
                        <span class="btn-text lbWalletAddress">Register</span>
                    </a>
                    <button onclick="location.href = '/login';" type="button" class="readon hover-shape"
                            style="background: #79f003; color: #090A1A; 
                                  margin-left: 15px; padding: 10px 20px 10px;
                                  border: none; top: 6px;">
                        <span class="btn-text">Login </span>
                    </button>
                </li>
            }
        </ul>
    </nav>
</header>
