                    <div class="menu-item">
                            <a class="menu-link @Html.Raw(url.Contains("/admin/UserCupHistory/index")?"active":"")" href="/admin/UserCupHistory/index">
                                <span class="menu-icon">
                                    @Html.Raw(iconSvg)
